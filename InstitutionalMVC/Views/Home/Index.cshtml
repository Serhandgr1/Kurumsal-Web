@model Tuple<List<ProjectDTO>,List<CommentDTO>,List<PreferenceDTO>>
<div class="hero_area">
    <header class="" style="background-color:#E9E0D2;">
        <div class="header_bottom" style="box-shadow: 0px 0px 30px black; background-color:#e8e8e8; opacity:0,3">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" href="index.html">
                        <img src="~/assets/images/logo.png" alt="">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item  active">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">AnaSayfa<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Services" asp-action="Index">HİZMETLER</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="About" asp-action="Index">HAKKIMIZDA</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">ÜRÜNLER</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Contact" asp-action="Index">İLETİŞİM</a>
                            </li>
                            <li class="nav-item">  
                                <a class="nav-link" id="W6362" style="border:none;"></a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
      
    </header>
<section class="slider_section">
    <div id="customCarousel1" class="carousel slide" data-ride="carousel">
           
        <div class="carousel-inner">
                
            <div class="carousel-item active">
                <div class=" ">
                    <div class="row">
                        <div class="col-md-10 mx-auto">
                            <div class="detail-box">
                                <h1>
                                   UN VE YEM <br>
                                    TEKNOLOJİLERİNDE <br>
                                   ÇÖZÜM ORTAĞINIZ
                                </h1>
                                <div class="btn-box">
                                        <a class="btn1" asp-controller="Contact" asp-action="Index">
                                        İletişim
                                    </a>
                                        <a class="btn2" asp-controller="About" asp-action="Index">
                                        Hakkımızda
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
</div>

<section class="project_section layout_padding" style="background-color:#e8e8e8;">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Projects
                </h2>
            </div>
            <div class="carousel-wrap ">
                <div class="owl-carousel project_carousel">
                    @foreach(var item in Model.Item1)
                {
                    <div class="item" id=@item.Id>
                        <div class="box">
                            <div class="img-box">
                                <embed src="~/assets/images/@item?.ProjectImage" style="height:250px; width:100%;" loop="0" autostart="true">
                                @*<img src=@item.ProjectImage alt="" />*@
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @item.ProjectTitle
                                </h5>
                                <p>
                                   @item.ProjectDetail
                                </p>
                            </div>
                        </div>
                    </div>

                }
              
                </div>
            </div>
        </div>
    </section>

<section class="why_us_section layout_padding" style="background-color:#e8e8e8;">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bizi neden tercih ediyorlar ?
            </h2>
        </div>
        <div class="why_us_container">
            @foreach(var item in Model.Item3)
            {
                <div class="box" id=@item.Id>
                    <div class="img-box">
                        <img src="~/assets/images/@item?.PreferenceImage" alt="">
                    </div>
                    <div class="detail-box">
                        <h5>
                           @item.PreferenceTitle
                        </h5>
                        <p>
                           @item.PreferenceDetail
                        </p>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
    <section class="client_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Hakkımızda Yorumlar
                </h2>
            </div>
        </div>
    <div id="customCarousel2" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @foreach(var item in Model.Item2)
    {
                if (item.Id == Model.Item2.First().Id)
                {

                    <div class="carousel-item active" id="@item.Id">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-10 mx-auto">
                                    <div class="box">
                                        <div class="img-box">
                                            <img src="~/assets/images/@item?.CommentImage" alt="">
                                        </div>
                                        <div class="detail-box">
                                            <div class="client_info">
                                                <div class="client_name">
                                                    <h5>
                                                        @item.CommentName
                                                    </h5>
                                                    <h6>
                                                        @item.CommentTitle
                                                    </h6>
                                                </div>
                                                <i class="fa fa-quote-left" aria-hidden="true"></i>
                                            </div>
                                            <p>
                                                @item.CommentDetail
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {

                    <div class="carousel-item" id="@item.Id">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-10 mx-auto">
                                    <div class="box">
                                        <div class="img-box">
                                            <img src="~/assets/images/@item?.CommentImage" alt="">
                                        </div>
                                        <div class="detail-box">
                                            <div class="client_info">
                                                <div class="client_name">
                                                    <h5>
                                                        @item.CommentName
                                                    </h5>
                                                    <h6>
                                                        @item.CommentTitle
                                                    </h6>
                                                </div>
                                                <i class="fa fa-quote-left" aria-hidden="true"></i>
                                            </div>
                                            <p>
                                                @item.CommentDetail
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }       
                }
        </div>
        <ol class="carousel-indicators">
            @for(var i=0;i<Model.Item2.Count;i++)
            {
                if (i == 0)
                {
                    <li data-target="#customCarousel2" data-slide-to="0" class="active"></li>
                }
                else
                {
                    <li data-target="#customCarousel2" data-slide-to=@i></li>
                }
            }
           
        </ol>
    </div>
    
           
       
    </section>

<section class="contact_section layout_padding" style="background-color:#e8e8e8;">
        <div class="container-fluid">
            <div class="col-lg-4 col-md-5 offset-md-1">
                <div class="heading_container">
                    <h2>
                        Contact Us
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-5 offset-md-1">
                    <div class="form_container">
                        <form action="">
                            <div>
                                <input type="text" placeholder="Your Name" />
                            </div>
                            <div>
                                <input type="text" placeholder="Phone Number" />
                            </div>
                            <div>
                                <input type="email" placeholder="Email" />
                            </div>
                            <div>
                                <input type="text" class="message-box" placeholder="Message" />
                            </div>
                            <div class="btn_box">
                                <button>
                                    SEND
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-7 col-md-6 px-0">
                    <div class="map_container">
                        <div class="map">
                            <div id="googleMap"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

 