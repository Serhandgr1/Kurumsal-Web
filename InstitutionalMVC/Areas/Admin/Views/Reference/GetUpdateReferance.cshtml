@model NewReferanceClient
@{
    Layout = "_AdminLayout";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans Güncelle</h4>
            <p class="card-description"> Referans Bilgileri </p>
           
            <form class="forms-sample" asp-action="UpdateReferance" method="post" asp-controller="Reference" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" asp-for="Id" style="display:none;" />
                    <label for="exampleInputName1">Referans Adı</label>
                    <input type="text" asp-for="ReferangeName" class="form-control" id="exampleInputName1" placeholder="Referans Adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Referans Açıklaması</label>
                    <input type="text" asp-for="ReferangeDetail" class="form-control" id="exampleInputEmail3" placeholder="Referans Açıklaması">
                </div>
                <div class="form-group">
                    <label>Resim Yükle (Zorunlu)</label><br />
                    <input type="file" name="ReferangeImage" asp-for="ReferangeImage" class="btn btn-primary">
                </div>
                <button type="submit" id="btn" class="btn btn-primary mr-2">GÖNDER</button>
                <a class="btn btn-dark" href="@Url.Action("GetAllReferanceIndex","Reference")">VAZGEÇ</a>
            </form>
        </div>
    </div>
</div>