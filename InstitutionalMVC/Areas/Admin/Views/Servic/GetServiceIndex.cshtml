@model List<ServicesDTO>
@{
    Layout = "_AdminLayout";
}
<script src="~/assets/js/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Hizmetlerimiz</h4>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Hizmet Adı</th>
                        <th>Hizmet İçeriği</th>
                        <th>Hizmet Avatarı</th>
                        <th>Sil/Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.ServiceTitle</td>
                            <td>@item.ServiceDetail</td>
                            <td>@item.ServiceImage</td>
                            <td>
                                <button class="btn btn-outline-danger" id="btn1">@Html.ActionLink("Sil", "DeleteService",new{id=item.Id}, new { @class="btn btn-warning", onclick = "return confirm('Silmek istediğinizden emin misiniz?')"})</button>
                                <a class="btn btn-outline-warning" href="@Url.Action("GetUpdateServiceIndex" , "Servic" , new {Id=item.Id,ServiceTitle=item.ServiceTitle,ServiceDetail=item.ServiceDetail,ServiceImage=item.ServiceImage})">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <input style="display:none;" id="bag" value="@ViewBag.Message" />
    </div>
</div>
<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("Yorum Silindi!", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata Oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    } else if (data == "UpdateBaşarılı") {
        swal("Güncelleme işleminiz başarı!", {
            icon: "success",
            button: "Tamam!",
        });
    }
</script>
