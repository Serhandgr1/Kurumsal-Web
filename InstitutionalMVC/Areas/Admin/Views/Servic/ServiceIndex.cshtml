@model ServicesDTO
@{
    Layout = "_AdminLayout";
}
<script src="~/assets/js/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Hizmet Ekle</h4>
            <p class="card-description"> Hizmet Bilgileri </p>
            <form class="forms-sample" asp-action="PostsService" asp-controller="Servic">
                <div class="form-group">
                    <label for="exampleInputName1">Hizmet Adı</label>
                    <input type="text" asp-for="ServiceTitle" class="form-control" id="exampleInputName1" placeholder="Hizmet Adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Hizmet Açıklaması</label>
                    <input type="text" asp-for="ServiceDetail" class="form-control" id="exampleInputEmail3" placeholder="Hizmet Açıklaması">
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Tercih sebebi Avatarı seç</label>
                    <select class="form-control" asp-for="ServiceImage" id="exampleSelectGender">
                        <option>Montaj</option>
                        <option>Mühendis</option>
                        <option>Üretim</option>
                        <option>Taşıyıcı</option>
                    </select>
                </div>
                <button type="submit" id="btn" class="btn btn-primary mr-2">GÖNDER</button>
                <button class="btn btn-dark">VAZGEÇ</button>
            </form>
        </div>
        <input id="bag" style="display:none;" value="@ViewBag?.Message" />
    </div>
</div>
<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("Yorum Eklendi!", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata Oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>