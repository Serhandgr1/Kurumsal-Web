@model CommentDTO
@{
    Layout = "_AdminLayout";
}
<script src="~/assets/js/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Yorum Ekle</h4>
            <p class="card-description"> Yorum Bilgileri </p>
            <form class="forms-sample" asp-action="PostsComment" method="post" asp-controller="Comments" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Yorum Yapanın adı</label>
                    <input type="text" asp-for="CommentName" class="form-control" id="exampleInputName1" placeholder="Yorum Yapanın adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yorum Mesajı</label>
                    <input type="text" asp-for="CommentDetail" class="form-control" id="exampleInputEmail3" placeholder="Yorum Mesajı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yorum Yapanın Ünvanı</label>
                    <input type="text" asp-for="CommentTitle" class="form-control" id="exampleInputEmail3" placeholder="Yorum Yapanın Ünvanı">
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Yorum Avatarı seç</label>
                    <select class="form-control" asp-for="CommentImage" id="exampleSelectGender">
                        <option>Kadın</option>
                        <option>Erkek</option>
                    </select>
                </div>
                <button type="submit" id="btn" onclick="Confirm()" class="btn btn-primary mr-2">GÖNDER</button>
                <button class="btn btn-dark">VAZGEÇ</button>
            </form>
        </div>
    </div>
    <input id="bag" style="display:none;" value="@ViewBag?.Message" />
</div>
<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("Yorum Eklendi!", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata Oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>