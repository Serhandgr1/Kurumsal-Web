@model CommentDTO
@{
    Layout = "_AdminLayout";
}
<script src="~/assets/js/jquery-3.4.1.min.js"></script>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yorum Güncelle</h4>
            <p class="card-description"> Yorum Bilgileri </p>
            <form class="forms-sample" asp-action="UpdateComment" asp-controller="Comments" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" asp-for="Id" class="form-control" id="exampleInputName1" placeholder="@Model.Id" style="display:none;">
                    <label for="exampleInputName1">Yorum Yapanın adı</label>
                    <input type="text" asp-for="CommentName" class="form-control" id="exampleInputName1" placeholder="@Model.CommentName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yorum Mesajı</label>
                    <input type="text" asp-for="CommentDetail" class="form-control" id="exampleInputEmail3" placeholder="@Model.CommentDetail">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yorum Yapanın Ünvanı</label>
                    <input type="text" asp-for="CommentTitle" class="form-control" id="exampleInputEmail3" placeholder="@Model.CommentTitle">
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Yorum Avatarı seç</label>
                    <select class="form-control" asp-for="CommentImage" data-selected=@Model.CommentImage id="opt">
                        <option value="Kadın">Kadın</option>
                        <option value="Erkek">Erkek</option>
                    </select>
                </div>
                <button type="submit" id="btn" class="btn btn-primary mr-2" >GÜNCELLE</button>
                <a class="btn btn-dark" href="@Url.Action("GetAllCommendIndex","Comments")">VAZGEÇ</a>
            </form>
        </div>
    </div>
</div>
<script>
    document.querySelectorAll('[data-selected]').forEach(e => {
        e.value = e.dataset.selected
    });
</script>
