@model ContactDTO
@{
    Layout = "_AdminLayout";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni İletişim Ekle</h4>
            <p class="card-description"> İletişim Bilgileri </p>
            <form class="forms-sample" asp-action="PostsContact" asp-controller="Contact">
                <div class="form-group">
                    <label for="exampleInputName1">Admin Mail</label>
                    <input type="text" asp-for="Email" class="form-control" id="exampleInputName1" placeholder="Admin Mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Admin Numara</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" id="exampleInputEmail3" placeholder="Admin Numara">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Admin Adres</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail3" placeholder="Admin Adres">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Admin Adres</label>
                    <input type="text" asp-for="Message" class="form-control" id="exampleInputEmail3" placeholder="Admin Adres">
                </div>
                <button type="submit" id="btn" class="btn btn-primary mr-2">GÖNDER</button>
                <button class="btn btn-dark">VAZGEÇ</button>
            </form>
        </div>
    </div>
</div>